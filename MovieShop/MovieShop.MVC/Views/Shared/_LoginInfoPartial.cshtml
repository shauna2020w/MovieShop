@using ApplicationCore.ServiceInterfaces;



@inject ILoggerService _loggerService



@if (_loggerService.IsAuthenticated)
{
    <div class="navbar-collapse collapse w-100 order-3">
        <ul class="navbar" -nav ml-auto>
            @if (_loggerService.IsAdmin || _loggerService.IsSuperAdmin)
            {
                <li class="nav-item dropdown text-capitalize">
                    <a class="nav-link dropdown-toggle" id="dropdown01" data-toggle="dropdown"
                       style="cursor: pointer;" aria-haspopup="true"
                       aria-expanded="false">
                       @_loggerService.FullName
                    </a>

                    <div class="dropdown-menu" aria-labelledby="dropdown01">
                        <a class="dropdown-item">Library</a>
                        <a class="dropdown-item" asp-controller="Admin" asp-action="CreateMovie">Create Movie</a>
                        <a class="dropdown-item" asp-controller="Admin" asp-action="Profile">Create Cast</a>
                        <a class="dropdown-item" asp-controller="Admin" asp-action="EditProfile">"Index"</a>
                    </div>
                </li>
             }
       

            <li class="nav-item dropdown text-capitalize">
                <a class="nav-link dropdown-toggle" id="dropdown01" data-toggle="dropdown"
                   style="cursor: pointer;" aria-haspopup="true"
                   aria-expanded="false">
                    @_loggerService.FullName
                </a>



                <div class="dropdown-menu" aria-labelledby="dropdown01">
                    <a class="dropdown-item">Library</a>
                    <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Log Out</a>
                    <a class="dropdown-item" asp-controller="Account" asp-action="Profile">View Profile</a>
                    <a class="dropdown-item" asp-controller="Account" asp-action="EditProfile">Edit Profile</a>
                </div>
            </li>
        </ul>
    </div>
}

    else
    {
    <div>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item pr-4">
                <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Login">Login</a>
            </li>
            <li class="nav-item">
                <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Register">Register</a>
            </li>
        </ul>
    </div>
    }
